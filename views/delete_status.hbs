{{#extends 'base'}}


{{#block "content"}}
<div class="mt-2 alert alert-danger">
    Are you sure you want to delete this status: {{status.status}}?
    <div>
        <form action="/status/delete/{{this._id}}" method="POST">
            <button type="submit" class="btn btn-danger">Yes</button>
            <a href="/status" class="btn btn-success">No</a>
        </form>
    </div>
</div>
{{/block}}

{{/extends}}